{
  "extends": [
    "airbnb",                           
    "plugin:prettier/recommended"       
  ],
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": [
      "error",                           
      {
        "singleQuote": true,            
        "trailingComma": "all",         
        "semi": true,                   
        "printWidth": 80                
      }
    ],
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }] 
  }
}
